<div class="container">
  <div class="jumbotron">
    <h1>Come-la-hamburguesa!</h1>      
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <label for="ca">Enter a Burger:</label>
        <input type="text" id="burger" name="burgerName">
      </div>

      <button type="submit" class="btn btn-success">Add Burger</button>
    </form>
  </div>

  <div class="panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Pending Burgers to Devour!</h3>
    </div>
    <div class="panel-body">
      <ul>
        {{#each burger}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}<span>.</span> {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="true">
                <button type="submit" class="btn btn-danger">Devour!</button>
              </form>


            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="col-md-1">
  </div>

  <div class="panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Devoured Burgers!</h3>
    </div>
    <div class="panel-body">
      <ul>
        {{#each burger}}
          {{#if this.devoured}}
            <li>
              {{this.id}}<span>.</span> {{this.burger_name}}

              <!-- <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="sleepy" value="false">
                <button type="submit">WAKE UP!</button>
              </form> -->


            </li>
          {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
      
</div>

